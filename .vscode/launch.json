    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug C tests",
        "preLaunchTask": "Build Debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/build/tests/c_tests/unit/c_secrecy_unit_tests",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/build",
        "environment": [],
        "externalConsole": false, //set to true to see output in cmd instead
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ] 
      },  
